{% extends 'base.html.twig' %}

{% block title %}File index{% endblock %}

{% block body %}
    <h1>File index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FechaSubida</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ loop.index }}</td>
                <td> <a href="{{ path('app_file_download', {'id': file.id}) }}">{{ file.name }}</a></td>
                <td>{{ file.fechaSubida ? file.fechaSubida|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_file_edit', {'id': file.id}) }}">edit</a>
                    {{ include('file/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_file_new') }}">Create new</a>
{% endblock %}
